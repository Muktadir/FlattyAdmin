<!DOCTYPE html>
<html>

<body class='contrast-red sign-up contrast-background'>
<div id='wrapper'>
  <div class='application'>
    <div class='application-content'>
      <a href="sign_in.html"><div class='icon-heart'></div>
        <span>Admin Panel</span>
      </a>
    </div>
  </div>
  <div class='controls'>
    <div class='caret'></div>
    <div class='form-wrapper'>
      <h1 class='text-center'>Create New Admin</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /></div>
          <div class='row-fluid'>
            <div class='span12 icon-over-input'>
              <%= f.email_field :email, autofocus: true, :class => 'span12', :id => 'email', :placeholder => "E-mail", :style => 'border-radius:0px; font-size:13px' %>
              <!--<input class="span12" id="email" name="email" placeholder="E-mail" type="text" value="" />-->
              <i class='icon-user muted'></i>
            </div>
          </div>
          <div class='row-fluid'>
            <div class='span12 icon-over-input'>
              <% if @validatable %>
                  <em style="font-size: 13px; font-family: Helvetica Neue,Helvetica,Arial,sans-serif;">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", :class => 'span12', :id => 'password', :placeholder => 'Password' %>
              <!--<input class="span12" id="password" name="password" placeholder="Password" type="password" value="" />-->
              <i class='icon-lock muted', style="margin-top: 17px"></i>
            </div>
          </div>
          <div class='row-fluid'>
            <div class='span12 icon-over-input'>
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'span12', :id => 'password_confirmation', :placeholder => 'Confirm Password' %>
              <!--<input class="span12" id="password_confirmation" name="password_confirmation" placeholder="Password confirmation" type="password" value="" />-->
              <i class='icon-lock muted'></i>
            </div>
          </div>
          <label class="checkbox" for="agreement"><input id="agreement" name="agreement" type="checkbox" value="1" />
            I accept
            <a href="#" class="text-contrast">user agreements</a>
          </label>



          <div class="actions">
            <%= f.submit "Create Admin", :class => 'btn btn-block' %>
          </div>
      <% end %>


      <!--<div class='text-center'>-->
        <!--<hr class='hr-normal' />-->
        <!--<a href="sign_in.html"><i class='icon-chevron-left'></i>-->
          <!--Go back to sign in-->
        <!--</a>-->
      <!--</div>-->
    </div>
  </div>
  <div class='login-action text-center'>
    <a href="forgot_password.html"><i class='icon-lock'></i>
      Forgot your password?
    </a>
  </div>
</div>
</body>
</html>









